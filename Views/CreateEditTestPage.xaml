<Page x:Class="TestSystem.Views.CreateEditTestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestSystem.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateEditTestPage">

    <Grid Background="#FFD4A859">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Основна інформація про тест -->
        <GroupBox Grid.Row="0" Header="Основна інформація" Margin="10">
            <StackPanel>
                <TextBlock Text="Назва тесту:"/>
                <TextBox x:Name="TestNameTextBox" Margin="0,5,0,10"/>

                <TextBlock Text="Опис тесту:"/>
                <TextBox x:Name="DescriptionTextBox" Height="40" TextWrapping="Wrap" 
                         Margin="0,5,0,10" />

                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Час на тест (хвилин):"/>
                        <TextBox x:Name="TimeLimitTextBox" Width="100" Text="30"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Макс. кількість спроб:"/>
                        <TextBox x:Name="MaxAttemptsTextBox" Width="100" Text="1"/>
                    </StackPanel>
                </StackPanel>

                <CheckBox x:Name="IsActiveCheckBox" Content="Тест активний" IsChecked="True" Margin="0,10,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Питання тесту -->
        <GroupBox Grid.Row="1" Header="Питання тесту" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Керування питаннями -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Content="➕ Додати питання" Click="AddQuestion_Click"/>
                    <Button Content="✏️ Редагувати" Click="EditQuestion_Click" Margin="10,0,0,0"/>
                    <Button Content="🗑️ Видалити питання" Click="DeleteQuestion_Click" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Список питань -->
                <ListView Grid.Row="1" x:Name="QuestionsListView">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="#" DisplayMemberBinding="{Binding SortOrder}" Width="40"/>
                            <GridViewColumn Header="Текст питання" DisplayMemberBinding="{Binding QuestionText}" Width="300"/>
                            <GridViewColumn Header="Тип" DisplayMemberBinding="{Binding QuestionType}" Width="80"/>
                            <GridViewColumn Header="Вага" DisplayMemberBinding="{Binding Weight}" Width="50"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </GroupBox>

        <!-- Кнопки збереження -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Скасувати" Click="Cancel_Click" Padding="15,5"/>
            <Button Content="Зберегти тест" Click="SaveTest_Click" 
                    Background="#FF4CAF50" Foreground="White" Padding="15,5" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>
