<Page x:Class="TestSystem.Views.TeacherDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestSystem.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeacherDashboardPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="WelcomeText" FontSize="24" FontWeight="Bold" 
                      Margin="20" TextAlignment="Center"/>
            <TextBlock Text="Панель викладача" FontSize="18" 
                      HorizontalAlignment="Center" Margin="10"/>
            <Button Content="Меню тестів" Width="150" Height="30" Margin="10"/>
            <Button Content="Статистика" Width="150" Height="30" Margin="10"/>
            <Button Content="Вийти" Width="150" Height="30" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
