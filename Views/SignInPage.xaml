<Page x:Class="TestSystem.Views.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestSystem.Views"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="SignInPage">

    <Grid Background="#FFEE9934">
        <Border Width="420" Padding="24" CornerRadius="14" Background="White"
     BorderBrush="#DDD" BorderThickness="1"
     HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock FontSize="26" FontWeight="SemiBold">Вхід до акаунту</TextBlock>

                <TextBlock Margin="4">Логин</TextBlock>
                <TextBox x:Name="LoginBox" Height="34"></TextBox>

                <TextBlock Margin="4">Пароль</TextBlock>
                <PasswordBox x:Name="PasswordBox" Height="34"/>

                <TextBlock x:Name="StatusTextBlock" 
                          TextWrapping="Wrap" 
                          Margin="10,5" 
                          FontSize="11" 
                          Foreground="Gray" 
                          TextAlignment="Center" 
                          Height="30"/>

                <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Right" >
                    <Button Margin="0,0,8,0" Click="Cancel_Click" Background="#FFD76C4E">Скасувати</Button>
                    <Button Background="DarkOliveGreen" Foreground="White" Padding="18,4" Click="SignIn_Click">Увійти</Button>
                </StackPanel>

                <Separator Margin="0,16,0,10"/>
                <TextBlock>Немає акаунту?</TextBlock>
                <Button Margin="6" Background="IndianRed" Foreground="White" Click="GoToSignUp_Click">Створити акаунт</Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>